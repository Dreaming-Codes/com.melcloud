        "horizontal": {
            "type": "enum",
            "title": {
                "en": "Horizontal Position"
            },
            "getable": true,
            "setable": true,
            "uiComponent": "picker",
            "uiQuickAction": true,
            "values": [
                {
                  "id": "auto",
                  "title": {
