            "uiQuickAction": true,
            "values": [
                {
                  "id": "off",
                  "title": {
                    "en": "Off"
                  }
                },
                {
                  "id": "heat",
                  "title": {
                    "en": "Heat"
                   }
                },
                {
                  "id": "dry",
                  "title": {
                    "en": "Dry"
                  }
                },
                {
                    "id": "cool",
                    "title": {
                      "en": "Cool"
                    }
                },
                {
                    "id": "fan",
                    "title": {
                      "en": "Fan"
                    }
                },
                {
                  "id": "auto",
                  "title": {
                    "en": "Auto"
                  }
                }
